<Window x:Class="WhileFrontPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WhileFrontPlayer"
        mc:Ignorable="d"
        Title="WFP" Height="270" Width="480" MinHeight="270" MinWidth="480" AllowsTransparency="True" WindowStyle="None" 
        ResizeMode="CanResizeWithGrip" Background="#FF424242" Drop="Window_Drop" KeyDown="Window_KeyDown" AllowDrop="True" Topmost="True">
    <Grid>
        <MediaElement x:Name="mediaElement" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Volume="1" LoadedBehavior="Manual">
            <ContextMenuService.ContextMenu>
                <ContextMenu>
                    <MenuItem x:Name="PauseMenu" Header="一時停止" Click="Menu_Pause"/>
                    <MenuItem x:Name="ExitMenu"  Header="終了" />
                </ContextMenu>
            </ContextMenuService.ContextMenu>
        </MediaElement>
    </Grid>
</Window>
